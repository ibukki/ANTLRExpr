BASIC = 5000;
PERF = 1500;
OT=100;
OTHOUR=5;
AGE=30;
ADDITION = 100;

if(AGE < 20){
	ADDITION = 500;
	DEDUCTION = 300;
}else{
	if(AGE < 30){
		ADDITION = 300;
		DEDUCTION = 200;
	}else{
		ADDITION = 200;
		DEDUCTION = 200;
	}
}


TOTALPAY = BASIC + PERF  + OT * OTHOUR + ADDITION - DEDUCTION;
